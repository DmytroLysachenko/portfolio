---
import { Image, getImage } from "astro:assets";
import { type CollectionEntry, getCollection, render } from "astro:content";

import ContactCTA from "../../components/ContactCTA.astro";
import Hero from "../../components/Hero.astro";
import Icon from "../../components/Icon.astro";
import Pill from "../../components/Pill.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
  basePerson,
  breadcrumbs,
  softwareApplication,
  webPage,
} from "../../lib/seo";

import type { ImageMetadata } from "astro";

interface Props {
  entry: CollectionEntry<"project">;
}

export async function getStaticPaths() {
  const project = await getCollection("project");
  return project.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const projectImages = import.meta.glob<ImageMetadata>(
  "../../assets/projects/*.webp",
  {
    eager: true,
    import: "default",
  },
);
const projectImage = projectImages[`../../assets/projects/${entry.data.img}`];
const siteUrl = Astro.site ?? new URL("https://www.dlysachenkodev.icu");
const person = basePerson(siteUrl);

const ogImage = projectImage
  ? await getImage({
      src: projectImage,
      width: 1200,
      format: "webp",
    })
  : null;

const projectUrl = new URL(`/project/${entry.id}/`, siteUrl).href;
const mainEntity = softwareApplication({
  entry,
  siteUrl,
  person,
  image: ogImage?.src ? new URL(ogImage.src, siteUrl).href : undefined,
});

const jsonLd = [
  mainEntity,
  webPage({
    name: entry.data.title,
    url: projectUrl,
    description: entry.data.description,
    siteUrl,
    image: ogImage?.src ? new URL(ogImage.src, siteUrl).href : undefined,
    mainEntity,
  }),
  breadcrumbs([
    { name: "Home", url: siteUrl.href },
    { name: "Projects", url: new URL("/projects/", siteUrl).href },
    { name: entry.data.title, url: projectUrl },
  ]),
  {
    "@context": "https://schema.org",
    ...person,
  },
];

const allProjects = (await getCollection("project")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
const currentIndex = allProjects.findIndex((project) => project.id === entry.id);
const newerProject = currentIndex > 0 ? allProjects[currentIndex - 1] : null;
const olderProject =
  currentIndex >= 0 && currentIndex < allProjects.length - 1
    ? allProjects[currentIndex + 1]
    : null;
---

<BaseLayout
  title={`${entry.data.title} | Dmytro Lysachenko`}
  description={entry.data.description}
  image={ogImage?.src}
  jsonLd={jsonLd}
>
  <div class="stack gap-20">
    <div class="stack gap-15">
      <header>
        <div class="wrapper stack gap-2">
          <a
            class="back-link"
            href="/projects"
            ><Icon icon="arrow-left" /> Back</a
          >
          <Hero
            title={entry.data.title}
            align="start"
          >
            <div class="details">
              <p class="description">{entry.data.description}</p>
              <div class="tags">
                {entry.data.tags.map((t) => <Pill>{t}</Pill>)}
              </div>
            </div>
          </Hero>
        </div>
      </header>
      <main class="wrapper">
        <div class="stack gap-10 content">
          {projectImage ? (
            <Image
              src={projectImage}
              alt={entry.data.img_alt || ""}
              widths={[640, 960, 1280]}
              sizes="(min-width: 50em) 70ch, 100vw"
              loading="eager"
              decoding="sync"
              fetchpriority="high"
            />
          ) : (
            <p>Image unavailable.</p>
          )}
          <div class="content">
            <Content />
          </div>
        </div>
      </main>
    </div>
    {(newerProject || olderProject) && (
      <nav class="wrapper related">
        <h2>Explore More Projects</h2>
        <div class="related-links">
          {newerProject && (
            <a
              class="related-link"
              href={`/project/${newerProject.id}`}
            >
              <span class="label">Newer project</span>
              <span class="title">{newerProject.data.title}</span>
            </a>
          )}
          {olderProject && (
            <a
              class="related-link"
              href={`/project/${olderProject.id}`}
            >
              <span class="label">Older project</span>
              <span class="title">{olderProject.data.title}</span>
            </a>
          )}
        </div>
      </nav>
    )}
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  header {
    padding-bottom: 3.5rem;
    border-bottom: 1px solid var(--gray-800);
  }

  .back-link {
    display: none;
  }

  .details {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    gap: 2rem;
    justify-content: space-between;
    align-items: center;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    min-width: 300px;
  }

  .description {
    font-size: var(--text-xl);
    max-width: 67ch;
  }

  .content {
    max-width: 77ch;
    font-size: var(--text-md);
  }

  .content > :global(* + *) {
    margin-top: 1.5rem;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3),
  .content :global(h4),
  .content :global(h5) {
    margin: 2rem 0;
  }

  .content :global(h4) {
    margin-bottom: 3rem;
    margin-top: 5rem;
  }

  .content :global(img) {
    border-radius: 2rem;
    box-shadow: var(--shadow-sm);
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
  }

  .content :global(blockquote) {
    font-size: var(--text-2xl);
    font-family: var(--font-brand);
    font-weight: 600;
    line-height: 1.1;
    padding-inline-start: 2rem;
    border-inline-start: 0.5rem solid var(--accent-dark);
    color: var(--gray-0);
  }

  .back-link,
  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .back-link:hover,
  .back-link:focus,
  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  .related {
    gap: 1.5rem;
  }

  .related h2 {
    font-size: var(--text-2xl);
  }

  .related-links {
    display: grid;
    gap: 1rem;
    width: 100%;
  }

  .related-link {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem 1.5rem;
    border-radius: 1rem;
    border: 1px solid var(--gray-800);
    background: var(--gradient-subtle);
    text-decoration: none;
    transition: box-shadow var(--theme-transition), transform var(--theme-transition);
  }

  .related-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .related-link .label {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--gray-400);
  }

  .related-link .title {
    font-size: var(--text-lg);
    color: var(--gray-0);
  }

  @media (min-width: 50em) {
    .back-link {
      display: block;
      align-self: flex-start;
      margin-bottom: 2rem;
    }

    .details {
      flex-direction: row;
      gap: 3rem;
    }

    .content :global(blockquote) {
      font-size: var(--text-3xl);
    }

    .related-links {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
