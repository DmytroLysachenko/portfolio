---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("project")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const siteUrl = Astro.site ?? new URL("https://www.dlysachenkodev.icu");
const listItems = projects.map((project, index) => ({
  "@type": "ListItem",
  position: index + 1,
  url: new URL(`/project/${project.id}/`, siteUrl).href,
  name: project.data.title,
}));

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    name: "Projects",
    url: new URL("/projects/", siteUrl).href,
    isPartOf: {
      "@type": "WebSite",
      url: siteUrl.href,
    },
    primaryImageOfPage: {
      "@type": "ImageObject",
      url: new URL("seo-preview.webp", siteUrl).href,
    },
    hasPart: listItems.map((item) => ({
      "@type": "CreativeWork",
      name: item.name,
      url: item.url,
    })),
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: siteUrl.href,
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Projects",
        item: new URL("/projects/", siteUrl).href,
      },
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    itemListElement: listItems,
  },
];
---

<BaseLayout
  title="Dmytro Lysachenko | Projects"
  description="Explore my full-stack web & mobile development projects built with React, Next.js, React Native, Node.js, and more. Showcasing modern, high-performance applications."
  jsonLd={jsonLd}
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="My Projects"
        tagline="See my most recent projects below to get an idea of my past experience."
        align="start"
      />
      <Grid variant="offset">
        {projects.map((project, index) => (
          <li>
            <PortfolioPreview
              project={project}
              priority={index === 0}
            />
          </li>
        ))}
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
