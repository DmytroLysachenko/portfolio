---
import { getCollection } from "astro:content";

import ContactCTA from "../components/ContactCTA.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { breadcrumbs, collectionPage, itemList } from "../lib/seo";

const projects = (await getCollection("project")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const siteUrl = Astro.site ?? new URL("https://www.dlysachenkodev.icu");
const seoPreview = new URL("seo-preview.webp", siteUrl).href;
const listUrls = projects.map((project) => ({
  name: project.data.title,
  url: new URL(`/project/${project.id}/`, siteUrl).href,
}));

const jsonLd = [
  collectionPage({
    name: "Projects",
    url: new URL("/projects/", siteUrl).href,
    siteUrl,
    image: seoPreview,
    items: listUrls,
  }),
  breadcrumbs([
    { name: "Home", url: siteUrl.href },
    { name: "Projects", url: new URL("/projects/", siteUrl).href },
  ]),
  itemList(listUrls),
];
---

<BaseLayout
  title="Dmytro Lysachenko | Projects"
  description="Explore my full-stack web & mobile development projects built with React, Next.js, React Native, Node.js, and more. Showcasing modern, high-performance applications."
  image={seoPreview}
  jsonLd={jsonLd}
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="My Projects"
        tagline="See my most recent projects below to get an idea of my past experience."
        align="start"
      />
      <Grid variant="offset">
        {projects.map((project, index) => (
          <li>
            <PortfolioPreview
              project={project}
              priority={index === 0}
            />
          </li>
        ))}
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
