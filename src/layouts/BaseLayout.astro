---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import CookieConsent from "../components/CookieConsent.astro";
import GtagConsentHead from "../components/GtagConsentHead.astro";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  jsonLd?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const { title, description, jsonLd } = Astro.props;
---

<html lang="en">
  <head>
    <GtagConsentHead />

    <MainHead
      title={title}
      description={description}
      jsonLd={jsonLd}
    />
  </head>

  <body>
    <picture
      class="bg-main"
      aria-hidden="true"
    >
      <source
        media="(min-width: 50em) and (prefers-color-scheme: dark)"
        srcset="/assets/backgrounds/bg-main-dark-1440w.webp"
      />
      <source
        media="(min-width: 50em) and (prefers-color-scheme: light)"
        srcset="/assets/backgrounds/bg-main-light-1440w.webp"
      />
      <source
        media="(max-width: 49.999em) and (prefers-color-scheme: dark)"
        srcset="/assets/backgrounds/bg-main-dark-800w.webp"
      />
      <source
        media="(max-width: 49.999em) and (prefers-color-scheme: light)"
        srcset="/assets/backgrounds/bg-main-light-800w.webp"
      />
      <img
        src="/assets/backgrounds/bg-main-light-800w.webp"
        alt=""
        width="1440"
        height="640"
        loading="eager"
        decoding="async"
        fetchpriority="high"
      />
    </picture>

    <div class="stack backgrounds">
      <Nav />

      <slot />

      <Footer />
    </div>

    <CookieConsent />

    <script>
      addEventListener("load", () =>
        document.documentElement.classList.add("loaded"),
      );
    </script>

    <style>
      :root {
        --_placeholder-bg: linear-gradient(transparent, transparent);
        --bg-noise: none;
        --bg-image-main: url("/assets/backgrounds/bg-main-light-800w.webp");
        --bg-image-main-curves: var(--_placeholder-bg);
        --bg-image-subtle-1: var(--_placeholder-bg);
        --bg-image-subtle-2: var(--_placeholder-bg);
        --bg-image-footer: var(--_placeholder-bg);
        --bg-svg-blend-mode: overlay;
        --bg-blend-mode: darken;
        --bg-image-aspect-ratio: 2.25;
        --bg-scale: 1.68;
        --bg-aspect-ratio: calc(var(--bg-image-aspect-ratio) / var(--bg-scale));
        --bg-gradient-size: calc(var(--bg-scale) * 100%);
      }

      :root.theme-dark {
        --bg-image-main: url("/assets/backgrounds/bg-main-dark-800w.webp");
        --bg-svg-blend-mode: darken;
        --bg-blend-mode: lighten;
      }

      /* These backgrounds are displayed below the fold, so we lazy load them
			   once the `.loaded` class has been set.  */
      :root.loaded {
        --bg-noise: url("/assets/backgrounds/noise.webp");
        --bg-image-main-curves: url("/assets/backgrounds/bg-main-light.svg");
        --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-light-800w.webp");
        --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-light-800w.webp");
        --bg-image-footer: url("/assets/backgrounds/bg-footer-light-800w.webp");
      }
      :root.loaded.theme-dark {
        --bg-image-main-curves: url("/assets/backgrounds/bg-main-dark.svg");
        --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-dark-800w.webp");
        --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-dark-800w.webp");
        --bg-image-footer: url("/assets/backgrounds/bg-footer-dark-800w.webp");
      }

      @media (min-width: 50em) {
        :root {
          --bg-scale: 1;
          --bg-image-main: url("/assets/backgrounds/bg-main-light-1440w.webp");
        }
        :root.theme-dark {
          --bg-image-main: url("/assets/backgrounds/bg-main-dark-1440w.webp");
        }

        :root.loaded {
          --bg-noise: url("/assets/backgrounds/noise.webp");
          --bg-image-main-curves: url("/assets/backgrounds/bg-main-light.svg");
          --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-light-1440w.webp");
          --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-light-1440w.webp");
          --bg-image-footer: url("/assets/backgrounds/bg-footer-light-1440w.webp");
        }
        :root.loaded.theme-dark {
          --bg-image-main-curves: url("/assets/backgrounds/bg-main-dark.svg");
          --bg-image-subtle-1: url("/assets/backgrounds/bg-subtle-1-dark-1440w.webp");
          --bg-image-subtle-2: url("/assets/backgrounds/bg-subtle-2-dark-1440w.webp");
          --bg-image-footer: url("/assets/backgrounds/bg-footer-dark-1440w.webp");
        }
      }

      .backgrounds {
        min-height: 100vh;
        isolation: isolate;
        contain: paint;
        background:
					/*noise*/
          var(--bg-noise) top center/220px repeat,
          /*footer*/ var(--bg-image-footer) bottom
            center/var(--bg-gradient-size) no-repeat,
          /*header1*/ var(--bg-image-main-curves) top
            center/var(--bg-gradient-size) no-repeat,
          /*base*/ var(--gray-999);
        background-blend-mode: /*noise*/
          overlay,
          /*footer*/ var(--bg-blend-mode),
          /*header1*/ var(--bg-svg-blend-mode),
          /*base*/ normal;
      }
      .bg-main {
        position: fixed;
        inset: 0;
        z-index: -2;
        pointer-events: none;
      }
      .bg-main img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      @media (forced-colors: active) {
        /* Deactivate custom backgrounds for high contrast users. */
        .backgrounds {
          background: none;
          background-blend-mode: none;
          --bg-gradient-size: none;
        }
      }
    </style>
  </body>
</html>
