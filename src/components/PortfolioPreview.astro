---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"project">;
  priority?: boolean;
}

const { project, priority = false } = Astro.props;
const { data, id } = project;
const projectImages = import.meta.glob("../assets/projects/*.webp", {
  eager: true,
  import: "default",
});
const projectImage = projectImages[`../assets/projects/${data.img}`];
---

<a
  class="card"
  href={`/project/${id}`}
>
  <span class="title">{data.title}</span>
  {projectImage ? (
    <Image
      src={projectImage}
      alt={data.img_alt || ""}
      widths={[320, 480, 640]}
      sizes="(min-width: 50em) 40vw, 100vw"
      loading={priority ? "eager" : "lazy"}
      decoding={priority ? "sync" : "async"}
      fetchpriority={priority ? "high" : "low"}
    />
  ) : (
    <span class="image-fallback">Image unavailable</span>
  )}
</a>

<style>
  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 11rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-fallback {
    grid-area: 1 / 1 / 3 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-300);
    background: var(--gray-900);
  }

  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }
</style>
